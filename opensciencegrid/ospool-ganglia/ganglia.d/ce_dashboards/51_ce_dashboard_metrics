[
  Aggregate = "SUM";
  Name   = "CpusInUse";
  Desc   = "Number of CPU cores provisioned for running jobs";
  Value  = Cpus;
  Units  = "cores";
  Requirements = ( State == "Claimed" || State=="Preempting" ) && Activity != "Idle" && Activity != "Suspended";
  TargetType = "Machine";
]
[
  Aggregate = "SUM";
  Name   = strcat("Cpus_Project ",replaceall("^[^.]*\\.|\\..+@.+$", AccountingGroup,"")?:"Unknown");
